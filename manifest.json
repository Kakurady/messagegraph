{
    "name":     "FA Message Graph",
    "version":  "0.0.0",
    "manifest_version": 2,

    "description":
        "Shows the count of your FurAffinity messages over time as a graph.",


//    "offline_enabled": true,
    "background"   : {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "page_action":  {
        "default_icon": "16.png",   //need new icon
        "default_title": "Message graph",
        "default_popup": "popup.html"
    },
    "icons":        {
        "16": "16.png",
        "48": "48.png",
        "128": "128.png"    
    },
    "permissions": [
        //"tabs",
        "webNavigation",
        "http://www.furaffinity.net/*",
        "http://sfw.furaffinity.net/*"
    ],
    "content_scripts":  [
        {
            //currently not going into HTTPS parts.
            "matches": [
//                "http://furaffinity.net/*",
                "http://www.furaffinity.net/*",
                "http://sfw.furaffinity.net/*"
            ],
            "js": ["furaffinity.js"],
            "run_at": "document_idle"
        }
    ]
}

